<script>
function postSet(){    	
    	$.post({
			url : "/blog/admin/posts",
			data : {
				"num" : "${post.NUM }",
				"url" : "${post.URL}"
			}
		}).done(function(result) {
			if(result.result){
				location.replace("")
				window.alert("삭제가 완료되었습니다.");
			}else{
				window.alert("포스트 삭제에 실패하였습니다.");
			}
		});

};










</script>



