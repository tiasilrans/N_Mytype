<style>
.box {
	border: 1px solid;
	border-color: #d9d9d9;
	margin: 20px;
	width: 90%;
	padding: 20px;
}

p {
	color: #a6a6a6;
}

.button {
	background-color: #4CAF50; /* Green */
	border: none;
	color: white;
	padding: 8px 20px;
	text-align: center;
	text-decoration: none;
	display: inline-block;
	font-size: 14px;
	margin: 4px 2px;
	cursor: pointer;
	border-radius: 5px;
}

.button1 {
	background-color: #303030;
}

